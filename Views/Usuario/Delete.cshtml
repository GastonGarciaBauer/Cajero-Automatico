@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2>Eliminar Usuario</h2>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-info">@ViewBag.Mensaje</div>
}

<form asp-action="DeleteBuscar" method="post">
    <div class="mb-3">
        <label for="id" class="form-label">ID del Usuario</label>
        <input type="number" class="form-control" id="id" name="id" placeholder="Ingrese ID" required />
    </div>

    <button type="submit" class="btn btn-warning">Buscar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
