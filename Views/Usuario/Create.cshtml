@model CajeroMVC.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="UsuarioLogin" class="form-label"></label>
        <input asp-for="UsuarioLogin" class="form-control" />
        <span asp-validation-for="UsuarioLogin" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Pin" class="form-label"></label>
        <input asp-for="Pin" class="form-control" type="password" />
        <span asp-validation-for="Pin" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
